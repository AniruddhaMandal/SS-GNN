{
  "name": "Multi-Clique-Detection: SS-GNN GCN",
  "dataset_name": "Multi-Clique-Detection",
  "model_name": "SS-GNN",
  "task": "Multi-Classification",

  "model_config": {
    "name": "ss_gnn",
    "mpnn_type": "gcn",
    "node_feature_dim": 64,
    "hidden_dim": 128,
    "mpnn_layers": 5,
    "dropout": 0.2,
    "out_dim": 4,
    "pooling": "attention",
    "temperature": 0.20,
    "subgraph_sampling": true,
    "subgraph_param": {
        "k": 5,
        "m": 200,
        "pooling": "sum"
    },
    "kwargs": {
        "node_feature_type": "degree_embed",
        "max_degree": 64
    }
  },

  "train": {
    "epochs": 100,
    "train_batch_size": 32,
    "val_batch_size": 32,
    "train_ratio": 0.6,
    "val_ratio": 0.2,
    "lr": 1e-3,
    "weight_decay": 5e-4,
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 15
    },
    "loss_fn": "CrossEntropyLoss",
    "metric": "ACC"
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 4,
  "log_dir": "logs",
  "checkpoint_dir": "checkpoints/ss-multi-clique/",
  "cache_dir": "cache",
  "save_every": 10,
  "keep_last_k": 3,

  "use_amp": true,
  "grad_clip": 2.0,
  "sampler": "uniform"
}

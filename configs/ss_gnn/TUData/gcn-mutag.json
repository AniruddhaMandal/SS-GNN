{
    "name":"SubgraphSampling: MUTAG SS GCN",
    "dataset_name": "MUTAG",
    "model_name": "SS-GNN",
    "task": "Binary-Classification",

    "model_config": 
    {
        "name": "ss_gnn",
        "mpnn_type": "gcn",
        "node_feature_dim": 7,
        "hidden_dim": 300,
        "mpnn_layers": 5,
        "dropout": 0.1,
        "out_dim": 2,
        "pooling": "max",
        "transformer_heads": 4,
        "transformer_layers": 2,
        "transformer_dim": 256,
        "subgraph_sampling": true,
        "subgraph_param": {
            "k": 5,
            "m": 100,
            "pooling": "mean"
        }

    },

    "train": 
    {
        "epochs": 50,
        "train_batch_size": 64,
        "val_batch_size": 64,
        "lr": 1e-3,
        "weight_decay": 1e-5,
        "optimizer": "adam",  
        "scheduler": {
            "type":"reduce_on_plateau",
            "patience":20
        },
        "loss_fn": "CrossEntropyLoss",
        "metric": "ACC"
    },

    "device":"cuda",
    "seed": 42,
    "num_workers": 4,
    "log_dir": "logs",
    "checkpoint_dir": "checkpoints",
    "cache_dir": "cache",
    "save_every": 1,
    "keep_last_k": 3,

    "use_amp": false,
    "grad_clip": 2.0
}
{
    "name":"MUTAG-GIN",
    "dataset_name": "MUTAG",
    "model_name": "VANILLA",
    "task": "Binary-Classification",

    "model_config": 
    {
        "name": "vanilla",
        "feature_dim": 28,
        "hidden_dim": 256,
        "mpnn_layers": 3,
        "dropout": 0.1,
        "transformer_heads": 4,
        "transformer_layers": 2,
        "transformer_dim": 256,
        "out_dim": 2
    },

    "train": 
    {
        "threshold": 0.5,
        "epochs": 20,
        "train_batch_size": 64,
        "val_batch_size": 64,
        "lr": 1e-3,
        "weight_decay": 1e-5,
        "optimizer": "adam",  
        "scheduler": {
            "type":"reduce_on_plateau",
            "patience":20
        },
        "loss_fn": "CrossEntropyLoss",
        "metric": "ACC"
    },

    "device":"cuda",
    "seed": 42,
    "num_workers": 4,
    "log_dir": "logs",
    "checkpoint_dir": "checkpoints",
    "cache_dir": "cache",
    "save_every": 1,
    "keep_last_k": 3,

    "use_amp": false,
    "grad_clip": 2.0
}
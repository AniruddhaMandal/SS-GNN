{
  "name": "SYN: Parity-Triangle VANILLA GCN",
  "dataset_name": "Triangle-Parity",
  "model_name": "VANILLA",
  "task": "Binary-Classification",

  "model_config": {
    "name": "vanilla",
    "mpnn_type": "gcn",
    "node_feature_dim": 64,
    "hidden_dim": 64,                          
    "mpnn_layers": 3,                           
    "dropout": 0.1,                             
    "out_dim": 2,
    "pooling": "add",
    "kwargs": {
        "node_feature_type": "degree_embed",
        "max_degree": 64
    }                             
  },

  "train": {
    "epochs": 10,                              
    "train_batch_size": 50,                     
    "val_batch_size": 25,
    "train_ratio": 0.6,
    "val_ratio": 0.20,
    "lr": 1e-3,
    "weight_decay": 5e-4,                       
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 10                            
    },
    "loss_fn": "CrossEntropyLoss",
    "metric": "ACC"                             
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 4,
  "log_dir": "logs",
  "checkpoint_dir": "checkpoints/vanilla-triangle/",
  "cache_dir": "cache",
  "save_every": 1,
  "keep_last_k": 3,

  "use_amp": true,                               
  "grad_clip": 2.0
}

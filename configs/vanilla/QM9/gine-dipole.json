{
  "name": "Baseline: QM9-Dipole VANILLA GINE",
  "dataset_name": "QM9",
  "model_name": "VANILLA",
  "task": "Single-Target-Regression",

  "model_config": {
    "name": "vanilla",
    "mpnn_type": "gine",
    "node_feature_dim": 11,
    "edge_feature_dim": 4,
    "hidden_dim": 128,
    "mpnn_layers": 4,
    "dropout": 0.1,
    "out_dim": 1,
    "pooling": "mean"
  },

  "train": {
    "epochs": 150,
    "train_batch_size": 32,
    "val_batch_size": 32,
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "lr": 1e-3,
    "weight_decay": 5e-4,
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 20
    },
    "loss_fn": "MSELoss",
    "metric": "MAE",
    "dataloader_kwargs":{
      "target_idx": 0,
      "normalize_target": true
    }
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 4,
  "log_dir": "logs/qm9",
  "checkpoint_dir": "checkpoints",
  "cache_dir": "cache",
  "save_every": 1,
  "keep_last_k": 3,

  "use_amp": false,
  "grad_clip": 1.0
}

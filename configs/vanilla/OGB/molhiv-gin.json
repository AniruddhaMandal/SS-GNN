{
  "name": "MolHIV Vanilla GIN",
  "dataset_name": "molhiv",
  "model_name": "VANILLA",
  "task": "Binary-Classification",

  "model_config": {
    "name": "vanilla",
    "mpnn_type": "gin",
    "node_feature_dim": 64,
    "edge_feature_dim": 64,
    "hidden_dim": 300,
    "mpnn_layers": 5,
    "dropout": 0.5,
    "out_dim": 1,
    "pooling": "mean"
  },

  "train": {
    "epochs": 100,
    "train_batch_size": 32,
    "val_batch_size": 64,
    "lr": 0.001,
    "weight_decay": 0.0,
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 10,
      "factor": 0.5
    },
    "loss_fn": "BCEWithLogitsLoss",
    "metric": "ROCAUC"
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 4,

  "log_dir": "logs/OGB/molhiv/",
  "checkpoint_dir": "checkpoints",
  "cache_dir": "cache",

  "save_every": 10,
  "keep_last_k": 3,
  "use_amp": false,
  "grad_clip": 0.0
}

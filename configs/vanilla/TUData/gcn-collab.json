{
  "name": "Baseline: COLLAB VANILLA GCN",
  "dataset_name": "COLLAB",
  "model_name": "VANILLA",
  "task": "Multi-Class-Classification",

  "model_config": {
    "name": "vanilla",
    "mpnn_type": "gcn",
    "node_feature_type": "one_hot_degree",
    "max_degree": 399,
    "node_feature_dim": 400,
    "hidden_dim": 256,                          
    "mpnn_layers": 5,                           
    "dropout": 0.5,                             
    "out_dim": 3,
    "pooling": "mean"                              
  },

  "train": {
    "epochs": 50,                              
    "train_batch_size": 128,                     
    "val_batch_size": 64,
    "lr": 5e-3,
    "weight_decay": 5e-4,                       
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 10                            
    },
    "loss_fn": "CrossEntropyLoss",
    "metric": "ACC"                             
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 0,
  "log_dir": "logs",
  "checkpoint_dir": "checkpoints",
  "cache_dir": "cache",
  "save_every": 1,
  "keep_last_k": 3,

  "use_amp": true,                               
  "grad_clip": 2.0
}

{
  "name": "Baseline: COLLAB VANILLA GCN",
  "dataset_name": "COLLAB",
  "model_name": "VANILLA",
  "task": "Multi-Class-Classification",

  "model_config": {
    "name": "vanilla",
    "mpnn_type": "gcn",
    "node_feature_type": "node_hot_degree",
    "max_degree": 128,
    "node_feature_dim": 129,
    "hidden_dim": 256,                          
    "mpnn_layers": 4,                           
    "dropout": 0.2,                             
    "out_dim": 3                                
  },

  "train": {
    "epochs": 100,                              
    "train_batch_size": 32,                     
    "val_batch_size": 32,
    "lr": 1e-3,
    "weight_decay": 5e-5,                       
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 10                            
    },
    "loss_fn": "CrossEntropyLoss",
    "metric": "ACC"                             
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 4,
  "log_dir": "logs",
  "checkpoint_dir": "checkpoints",
  "cache_dir": "cache",
  "save_every": 1,
  "keep_last_k": 3,

  "use_amp": true,                               
  "grad_clip": 2.0
}

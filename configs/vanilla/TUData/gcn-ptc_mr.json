{
  "name": "Baseline: PTC_MR VANILLA GCN",
  "dataset_name": "PTC_MR",
  "model_name": "VANILLA",
  "task": "Binary-Classification",

  "model_config": {
    "name": "vanilla",
    "mpnn_type": "gcn",
    "node_feature_dim": 18,
    "hidden_dim": 64,
    "mpnn_layers": 4,
    "dropout": 0.1,
    "out_dim": 2,
    "pooling": "mean"
  },

  "train": {
    "epochs": 50,
    "train_batch_size": 64,
    "val_batch_size": 64,
    "lr": 1e-3,
    "weight_decay": 1e-5,
    "optimizer": "adam",
    "scheduler": {
      "type": "reduce_on_plateau",
      "patience": 20
    },
    "loss_fn": "CrossEntropyLoss",
    "metric": "ACC"
  },

  "device": "cuda",
  "seed": 42,
  "num_workers": 4,
  "log_dir": "logs/phase1",
  "checkpoint_dir": "checkpoints",
  "cache_dir": "cache",
  "save_every": 10,
  "keep_last_k": 3,

  "use_amp": false,
  "grad_clip": 2.0
}
